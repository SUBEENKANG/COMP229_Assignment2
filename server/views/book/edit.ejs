<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>

        <!-- Content for the Add page -->
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>

                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Name</label>
                            <input type="text" class="form-control" id="nameTextField" placeholder="Enter your name"
                                name="name" value="<%= book.name %>" style="width: 50%" required>
                        </div>

                        <div class="form-group">
                            <label for="emailTextField">Email</label>
                            <input type="text" class="form-control" id="emailTextField"
                                placeholder="Enter your Email Address" name="email" value="<%= book.email %>"
                                style="width: 50%" required>
                        </div>

                        <div class="form-group">
                            <label for="phoneTextField">Phone Number</label>
                            <input type="text" class="form-control" id="phoneTextField"
                                placeholder="Enter your Phone Number" name="phone" value="<%= book.phone %>"
                                style="width: 50%" required>
                        </div>

                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>

                        <a href="/book-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>

                    </form>
                </div>

            </div>
        </div>


        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>